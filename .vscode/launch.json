{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "blazorwasm",
            "request": "launch",
            "browser": "chrome",
            "url": "https://localhost:7017",
            "cwd": "${workspaceFolder}/src/BobsComponent.Client",
            "preLaunchTask": "build",
            "program": "dotnet"
        },
        {
            "name": "Watch",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/BobsComponent.Client",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose"
            ],
            "preLaunchTask": "build"
        },
        {
            "name": "Attach",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/src/BobsComponent.Client",
            "url": "https://localhost:7017",
            "timeout": 30000
        }
    ],
    "compounds": [
        {
            "name": "Debug with Hot Reload",
            "configurations": [
                "Watch",
                "Attach"
            ]
        }
    ]
}