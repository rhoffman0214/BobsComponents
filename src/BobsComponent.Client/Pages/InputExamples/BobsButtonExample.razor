@page "/inputexamples/button"
@using BobsComponent.Library.Components
@using BobsComponent.Library.Enums
@using BobsComponent.Library.Services
@using BobsComponent.Client.Pages.InputExamples.Components
@inject MockApiService ApiService

<div class="button-examples-page">
    <div class="page-header">
        <h1>AsyncButton Component</h1>
        <p class="page-description">
            A comprehensive async-aware button component with loading states, progress tracking, and full customization support.
        </p>
    </div>

    <!-- Section 1: Interactive Playground -->
    <section class="example-section">
        <ButtonPlayground />
    </section>

    <!-- Section 2: Basic Button Styles -->
    <section class="example-section">
        <h2 class="section-title">1. Button Styles</h2>
        <p class="section-description">Six semantic color variants for different use cases</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>Primary</h3>
                <AsyncButton Text="Primary Action"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@stylePrimary" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Secondary</h3>
                <AsyncButton Text="Secondary Action"
                             Style="ButtonStyle.Secondary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@styleSecondary" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Tertiary</h3>
                <AsyncButton Text="Tertiary Action"
                             Style="ButtonStyle.Tertiary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@styleTertiary" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Success</h3>
                <AsyncButton Text="Success Action"
                             Style="ButtonStyle.Success"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@styleSuccess" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Warning</h3>
                <AsyncButton Text="Warning Action"
                             Style="ButtonStyle.Warning"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@styleWarning" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Error</h3>
                <AsyncButton Text="Error Action"
                             Style="ButtonStyle.Error"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@styleError" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 2: Button Sizes -->
    <section class="example-section">
        <h2 class="section-title">2. Button Sizes</h2>
        <p class="section-description">Three size variants for different contexts</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>Small</h3>
                <AsyncButton Text="Small Button"
                             Size="ButtonSize.Small"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@sizeSmall" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Medium (Default)</h3>
                <AsyncButton Text="Medium Button"
                             Size="ButtonSize.Medium"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@sizeMedium" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Large</h3>
                <AsyncButton Text="Large Button"
                             Size="ButtonSize.Large"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@sizeLarge" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 3: Icons -->
    <section class="example-section">
        <h2 class="section-title">3. Button Icons</h2>
        <p class="section-description">Add icons before or after button text</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>Icon Left</h3>
                <AsyncButton Text="Save File"
                             Style="ButtonStyle.Success"
                             IconPosition="IconPosition.Left"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())">
                    <Icon>
                        <span>üíæ</span>
                    </Icon>
                </AsyncButton>
                <CodeSnippet Code="@iconLeft" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Icon Right</h3>
                <AsyncButton Text="Next Step"
                             Style="ButtonStyle.Primary"
                             IconPosition="IconPosition.Right"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())">
                    <Icon>
                        <span>‚Üí</span>
                    </Icon>
                </AsyncButton>
                <CodeSnippet Code="@iconRight" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Multiple Icons</h3>
                <AsyncButton Text="Download"
                             Style="ButtonStyle.Tertiary"
                             IconPosition="IconPosition.Left"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())">
                    <Icon>
                        <span>‚¨áÔ∏è</span>
                    </Icon>
                </AsyncButton>
                <CodeSnippet Code="@iconCode" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 4: HTML Attributes -->
    <section class="example-section">
        <h2 class="section-title">4. HTML Attributes</h2>
        <p class="section-description">Standard HTML button attributes for forms and accessibility</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>Submit Button</h3>
                <AsyncButton Text="Submit Form"
                             ButtonType="submit"
                             Id="submit-btn"
                             Name="submitButton"
                             Title="Click to submit the form"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@htmlSubmit" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Reset Button</h3>
                <AsyncButton Text="Reset Form"
                             ButtonType="reset"
                             Id="reset-btn"
                             Title="Reset all form fields"
                             Style="ButtonStyle.Secondary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@htmlReset" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>With TabIndex</h3>
                <AsyncButton Text="Focused Button"
                             TabIndex="1"
                             Title="This button has tab index 1"
                             Style="ButtonStyle.Tertiary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@htmlTabIndex" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 5: ARIA Attributes -->
    <section class="example-section">
        <h2 class="section-title">5. ARIA Accessibility Attributes</h2>
        <p class="section-description">Screen reader support and accessibility features</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>ARIA Label</h3>
                <AsyncButton Text="üóëÔ∏è"
                             AriaLabel="Delete item from cart"
                             Title="Delete"
                             Style="ButtonStyle.Error"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@ariaLabel" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>ARIA Described By</h3>
                <AsyncButton Text="Submit"
                             AriaLabel="Submit registration form"
                             AriaDescribedBy="form-help-text"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@ariaDescribedBy" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
                <p id="form-help-text" class="help-text">Form will be validated before submission</p>
            </div>

            <div class="example-item">
                <h3>ARIA Busy (Auto)</h3>
                <AsyncButton Text="Loading Demo"
                             AriaLabel="Demonstration of aria-busy during loading"
                             Style="ButtonStyle.Success"
                             OnClickAsync="@(() => ApiService.SlowOperationAsync())" />
                <CodeSnippet Code="@ariaBusy" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 6: Data Attributes -->
    <section class="example-section">
        <h2 class="section-title">6. Data Attributes</h2>
        <p class="section-description">Custom data attributes for analytics, testing, and tracking</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>Analytics Tracking</h3>
                <AsyncButton Text="Track Click"
                             Style="ButtonStyle.Primary"
                             data-analytics-event="button_click"
                             data-analytics-category="user_action"
                             data-analytics-label="homepage_cta"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@dataAnalytics" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Test IDs</h3>
                <AsyncButton Text="E2E Test"
                             Style="ButtonStyle.Success"
                             data-testid="submit-form-button"
                             data-test-category="form-submission"
                             data-qa="primary-cta"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@dataTestId" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Feature Flags</h3>
                <AsyncButton Text="New Feature"
                             Style="ButtonStyle.Warning"
                             data-feature-flag="new-checkout-flow"
                             data-experiment-id="exp-2024-q1"
                             data-variant="control"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@dataFeatureFlag" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Custom Metadata</h3>
                <AsyncButton Text="Product Action"
                             Style="ButtonStyle.Tertiary"
                             data-product-id="prod-12345"
                             data-sku="SKU-ABC-001"
                             data-price="29.99"
                             data-currency="USD"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@dataProduct" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>UI State Tracking</h3>
                <AsyncButton Text="Modal Trigger"
                             Style="ButtonStyle.Secondary"
                             data-modal-target="user-settings"
                             data-modal-size="large"
                             data-backdrop="static"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@dataModal" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Multiple Data Attrs</h3>
                <AsyncButton Text="Multi-Track"
                             Style="ButtonStyle.Error"
                             data-action="delete"
                             data-entity="user"
                             data-confirm-required="true"
                             data-danger-level="high"
                             data-undo-available="false"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@dataMultiple" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 7: Loading States -->
    <section class="example-section">
        <h2 class="section-title">7. Loading States</h2>
        <p class="section-description">Automatic state management during async operations</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>Quick (500ms)</h3>
                <AsyncButton Text="Quick Action"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
                <CodeSnippet Code="@loadingAuto" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Medium (2s)</h3>
                <AsyncButton Text="Medium Action"
                             LoadingText="Processing..."
                             Style="ButtonStyle.Secondary"
                             OnClickAsync="@(() => ApiService.MediumOperationAsync())" />
                <CodeSnippet Code="@loadingText" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Slow (5s)</h3>
                <AsyncButton Text="Slow Action"
                             LoadingText="Please wait..."
                             SuccessText="Completed!"
                             Style="ButtonStyle.Success"
                             OnClickAsync="@(() => ApiService.SlowOperationAsync())" />
                <CodeSnippet Code="@successText" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 8: Error Handling -->
    <section class="example-section">
        <h2 class="section-title">8. Error Handling</h2>
        <p class="section-description">Automatic error state with retry functionality</p>

        <div class="example-grid">
            <div class="example-item">
                <h3>With Retry</h3>
                <AsyncButton Text="Will Fail"
                             ErrorText="Failed!"
                             ShowErrorRetry="true"
                             Style="ButtonStyle.Error"
                             OnClickAsync="@(() => ApiService.UnreliableOperationAsync(1.0))" />
                <CodeSnippet Code="@errorRetryTrue" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Without Retry</h3>
                <AsyncButton Text="Fail Silently"
                             ShowErrorRetry="false"
                             Style="ButtonStyle.Warning"
                             OnClickAsync="@(() => ApiService.UnreliableOperationAsync(1.0))" />
                <CodeSnippet Code="@errorRetryFalse" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>

            <div class="example-item">
                <h3>Custom Error Text</h3>
                <AsyncButton Text="Custom Error"
                             ErrorText="Oops! Try again"
                             ShowErrorRetry="true"
                             Style="ButtonStyle.Error"
                             OnClickAsync="@(() => ApiService.UnreliableOperationAsync(1.0))" />
                <CodeSnippet Code="@errorText" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
            </div>
        </div>
    </section>

    <!-- Section 9: Full Width -->
    <section class="example-section">
        <h2 class="section-title">9. Full Width Buttons</h2>
        <p class="section-description">Buttons that span the full width of their container</p>

        <div class="example-column">
            <div class="example-item">
                <AsyncButton Text="Full Width Primary"
                             FullWidth="true"
                             Style="ButtonStyle.Primary"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())" />
            </div>
            <div class="example-item">
                <AsyncButton Text="Full Width with Icon"
                             FullWidth="true"
                             Style="ButtonStyle.Success"
                             IconPosition="IconPosition.Left"
                             OnClickAsync="@(() => ApiService.QuickOperationAsync())">
                    <Icon>
                        <span>‚úì</span>
                    </Icon>
                </AsyncButton>
            </div>
            <CodeSnippet Code="@fullWidth" Language="CodeLanguage.Razor" ShowLineNumbers="false" />
        </div>
    </section>

    <!-- Section 10: Complete Example -->
    <section class="example-section">
        <h2 class="section-title">10. Complete Example</h2>
        <p class="section-description">All features combined in a single button</p>

        <div class="example-full">
            <AsyncButton Text="Complete Example"
                         Size="ButtonSize.Large"
                         Style="ButtonStyle.Primary"
                         ButtonType="submit"
                         Id="complete-example-btn"
                         Name="completeExample"
                         Title="This button demonstrates all available features"
                         TabIndex="1"
                         AriaLabel="Submit form with all validations"
                         AriaDescribedBy="complete-help"
                         LoadingText="Submitting form..."
                         SuccessText="Form submitted!"
                         ErrorText="Submission failed"
                         ShowErrorRetry="true"
                         IconPosition="IconPosition.Left"
                         data-analytics-event="form_submit"
                         data-analytics-category="user_registration"
                         data-form-id="registration-form"
                         data-step="final"
                         data-validation-required="true"
                         OnClickAsync="@(() => ApiService.MediumOperationAsync())">
                <Icon>
                    <span>üìù</span>
                </Icon>
            </AsyncButton>
            <p id="complete-help" class="help-text">
                This example includes: Large size, Primary style, Submit type, ARIA labels,
                data attributes for analytics and testing, custom loading/success/error text,
                icon support, and full accessibility features.
            </p>
            <CodeSnippet
                Code="@completeExampleCode"
                Language="CodeLanguage.Razor"
                Title="Complete Example Markup" />
        </div>
    </section>
</div>

