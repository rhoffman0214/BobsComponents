@page "/inputexamples"
@using BobsComponent.Library.Components.Icons

<PageTitle>Input Examples - BobsComponents</PageTitle>

<div class="page-header">
    <h1>
        <LucideIcon Name="list" Size="32" />
        Input Examples
    </h1>
    <p class="lead">Explore interactive examples and documentation for all input components in the library.</p>
</div>

<div class="examples-grid">
    <!-- Button Component Card -->
    <div class="example-card">
        <div class="card-icon">
            <LucideIcon Name="square" Size="48" />
        </div>
        <h2>AsyncButton</h2>
        <p>A powerful button component with built-in loading states, async operations, and comprehensive styling options.</p>
        <div class="card-links">
            <a href="inputexamples/button#playground" class="btn btn-primary">
                <LucideIcon Name="play-circle" Size="18" />
                Playground
            </a>
            <a href="inputexamples/button#button-styles" class="btn btn-secondary">
                <LucideIcon Name="brush" Size="18" />
                Examples
            </a>
            <a href="inputexamples/button#state-lifecycle" class="btn btn-secondary">
                <LucideIcon Name="book" Size="18" />
                Guides
            </a>
        </div>
    </div>

    <!-- Dropdown Component Card -->
    <div class="example-card">
        <div class="card-icon">
            <LucideIcon Name="menu" Size="48" />
        </div>
        <h2>BobsDropdown</h2>
        <p>A flexible dropdown component with keyboard navigation, custom styling, and support for complex data types.</p>
        <div class="card-links">
            <a href="inputexamples/dropdown" class="btn btn-primary">
                <LucideIcon Name="play-circle" Size="18" />
                View Examples
            </a>
        </div>
    </div>
</div>

